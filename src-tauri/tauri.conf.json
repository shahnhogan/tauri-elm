{
  "build": {
    "beforeDevCommand": "elm make src/Main.elm --output=public/main.js",
    "beforeBuildCommand": "elm make src/Main.elm --output=public/main.js --optimize",
    "devPath": "http://localhost:4000",
    "distDir": "../public",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "ElmTauri",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/icon.ico"
      ],
      "identifier": "io.elm-tauri",
      "longDescription": "Elm application build with Tauri",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "Elm Desktop App",
        "width": 800
      }
    ]
  }
}